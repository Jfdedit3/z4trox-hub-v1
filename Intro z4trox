Tabs.Avatar:AddInput("Head ID (â“)", {
    Title = "Head ID (â“)",
    Default = "",
    Placeholder = "ID",
    Numeric = true,
    Finished = true,
    Callback = function(s)
        -- On s'assure que la valeur saisie est un nombre.
        fireAvatarChange(tonumber(s), "Loading")
        wait(1)
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = "Done",
            Text = "Successfully âœ…",
            Duration = 3
        })
    end
})

